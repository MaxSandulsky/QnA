<% if !@answer.errors.present? %>
  document.querySelector('.answers').innerHTML = "<%= j render 'answers/index', question: @answer.question %>"
  document.getElementById('notice').innerHTML = "<%= t('.edit_success') %>"
<% else %>
  document.querySelector(".answer-errors-<%= @answer.id %>").innerHTML = "<%= render 'shared/errors', resource: @answer %>"
<% end %>
