$('.question-errors').html("<%= render 'shared/errors', resource: @question %>")

<% unless @question.errors.present? %>
  $('.question').html("<%= j render "questions/complete_question", question: @question %>")
  $('.form-question-edit').addClass('hide')
  $('.button-question-edit').removeClass('hide')
  document.getElementById('notice').innerHTML = "<%= t('.edit_success') %>"
<% end %>
