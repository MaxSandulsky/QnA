<% if !@answer.errors.present? %>
    document.getElementById("answer-<%= @answer.id %>").remove()

    {
        let template = document.createElement('template')
        template.innerHTML = "<%= j render 'answers/answer', answer: @answer %>".trim()
        document.querySelector('.answers').appendChild(template.content)
    }

    document.getElementById('notice').innerHTML = "<%= t('.edit_success') %>"
<% else %>
    document.querySelector(".answer-errors-<%= @answer.id %>").innerHTML = "<%= render 'shared/errors', resource: @answer %>"
<% end %>
