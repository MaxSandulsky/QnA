document.querySelector('.question-errors').innerHTML = "<%= render 'shared/errors', resource: @question %>"

<% unless question.errors.present? %>
  document.getElementById("question-<%= question.id %>").remove()
  let template = document.createElement('template')
  template.innerHTML = "<%= j render 'questions/show', question: @question %>".trim()
  document.querySelector('body').appendChild(template.content)
  delete template
  document.querySelector('.form-question-edit').classList.add('hide')
  document.querySelector('.button-question-edit').classList.remove('hide')
  document.getElementById('notice').innerHTML = "<%= t('.edit_success') %>"
<% end %>
